<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">

    <ScrollView
        android:id="@+id/scroll_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_book_title"
                style="@style/BasicTextView"
                android:layout_width="0dp"
                android:text="@string/Book_name_view"
                app:layout_constraintEnd_toStartOf="@+id/book_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/book_title_view"
                style="@style/BasicTextViewDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/detail_book_date"
                app:layout_constraintEnd_toStartOf="@id/book_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_book_title" />


            <TextView
                android:id="@+id/detail_book_date"
                style="@style/BasicTextView"
                android:layout_width="0dp"
                android:text="@string/Book_deadline_view"
                app:layout_constraintEnd_toStartOf="@+id/book_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_title_view" />

            <TextView
                android:id="@+id/book_date_view"
                style="@style/BasicTextViewDetail"
                app:layout_constraintEnd_toStartOf="@+id/book_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_book_date" />

            <TextView
                android:id="@+id/detail_notice_view"
                style="@style/BasicTextView"
                android:text="@string/Book_Notice_view"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toTopOf="@+id/book_notice_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_date_view" />

            <TextView
                android:id="@+id/book_notice_view"
                style="@style/BasicTextViewDetail"
                app:layout_constraintBottom_toTopOf="@+id/detail_actionPlan_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_notice_view" />

            <TextView
                android:id="@+id/detail_actionPlan_view"
                style="@style/BasicTextView"
                android:text="@string/Book_ActionPlan_view"
                app:layout_constraintBottom_toTopOf="@+id/book_actionPlan_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_notice_view" />


            <TextView
                android:id="@+id/book_actionPlan_view"
                style="@style/BasicTextViewDetail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_actionPlan_view" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/book_image_view"
                android:layout_width="100dp"
                android:layout_height="160dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/delete_button"
        style="@style/BasicButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Delete_Button"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scroll_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ChangeButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ChangeButton"
        style="@style/BasicButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Change_Button"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scroll_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/delete_button" />


</androidx.constraintlayout.widget.ConstraintLayout>