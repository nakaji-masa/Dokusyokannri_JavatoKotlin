<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionRegisterActivity">

    <ScrollView
        android:id="@+id/scroll_action_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/save_action_button">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp">

        <TextView
            style="@style/BasicTextView"
            android:id="@+id/action_date_text"
            android:text="@string/action_date"
            app:layout_constraintBottom_toTopOf="@+id/action_date_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/BasicEditText"
            android:id="@+id/action_date_edit"
            android:inputType="date"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/action_do_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/action_date_text" />

        <TextView
            android:id="@+id/action_do_text"
            style="@style/BasicTextView"
            android:text="@string/action_content_view"
            app:layout_constraintBottom_toTopOf="@+id/action_do_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/action_date_edit" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/action_do_edit"
            style="@style/BasicEditTextMultiLine"
            app:layout_constraintBottom_toTopOf="@+id/action_next_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/action_do_text" />


        <TextView
            style="@style/BasicTextView"
            android:id="@+id/action_next_view"
            android:text="@string/next_action_view"
            app:layout_constraintBottom_toTopOf="@id/action_next_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_do_edit" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/BasicEditTextMultiLine"
            android:id="@+id/action_next_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/action_next_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.appcompat.widget.AppCompatButton
        style="@style/BasicButton"
        android:id="@+id/save_action_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/Book_save_button"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_action_register"/>


</androidx.constraintlayout.widget.ConstraintLayout>


