<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    tools:context=".activities.RegisterActivity">

    <ScrollView
        android:id="@+id/registerScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/registerSaveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/BasicTextView"
                android:id="@+id/registerBookTitle"
                android:text="@string/Book_name_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/registerBookTitleInput"/>


            <androidx.appcompat.widget.AppCompatEditText
                style="@style/BasicEditText"
                android:id="@+id/registerBookTitleInput"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBookTitle"
                app:layout_constraintBottom_toTopOf="@+id/registerBookDate"/>

            <TextView
                style="@style/BasicTextView"
                android:id="@+id/registerBookDate"
                android:text="@string/Book_deadline_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBookTitleInput"
                app:layout_constraintBottom_toTopOf="@id/registerBookDateInput"/>

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/BasicEditText"
                android:id="@+id/registerBookDateInput"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBookDate"
                app:layout_constraintBottom_toTopOf="@+id/registerBookNotice"/>

            <TextView
                style="@style/BasicTextView"
                android:id="@+id/registerBookNotice"
                android:text="@string/Book_notice_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBookDateInput"
                app:layout_constraintBottom_toTopOf="@+id/registerBookNoticeInput"/>

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/BasicEditTextMultiLine"
                android:id="@+id/registerBookNoticeInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBookNotice"
                app:layout_constraintBottom_toTopOf="@+id/registerBookActionPlan"/>

            <TextView
                style="@style/BasicTextView"
                android:id="@+id/registerBookActionPlan"
                android:text="@string/Book_actionPlan_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/registerBookActionPlanInput"
                app:layout_constraintTop_toBottomOf="@+id/registerBookNoticeInput" />

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/BasicEditTextMultiLine"
                android:id="@+id/registerBookActionPlanInput"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBookActionPlan"
                app:layout_constraintBottom_toTopOf="@+id/registerBookImage"/>

            <TextView
                style="@style/BasicTextView"
                android:id="@+id/registerBookImage"
                android:text="@string/Book_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBookActionPlanInput" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/registerBookImageInput"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@android:drawable/ic_menu_camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBookImage"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerBarcodeButton"
        style="@style/BasicButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/barcode_button"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/registerSaveButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerScroll" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/BasicButton"
        android:id="@+id/registerSaveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Book_save_button"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/registerBarcodeButton"
        app:layout_constraintTop_toBottomOf="@+id/registerScroll" />

</androidx.constraintlayout.widget.ConstraintLayout>